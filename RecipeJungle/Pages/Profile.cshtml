@page
@model RecipeJungle.Pages.ProfileModel
@{
    Model.ActiveNavigation = "Profile";
    Layout = "Core/Layout";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            Delete recipes automatically after N days:
            <div style="width: 30%; position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">
                <div style="width: 100%;position: relative;display: flex;">
                    <input type="text" id="input" style=" width: 100%; border: 3px solid #00B4CC; border-right: none; padding: 5px;height: 36px;border-radius: 5px 0 0 5px;outline: none;color: #9DBFAF;" placeholder="">
                    <button type="button" onclick="clicked(document.getElementById('input').value)" style="width: 40px; height: 36px; border: 1px solid #00B4CC;  background: #00B4CC;  text-align: center;  color: #fff;  border-radius: 0 5px 5px 0;  cursor: pointer;  font-size: 20px;">
                        <i class="fa fa-check-circle"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
</div>

<script>
    document.getElementById('input').value = '@Model.GetCurrentValue()';
    function clicked(text) {
        httpRequest("GET", "/api/account/changePref?value=" + text, {}, function (response) {
            successBox(response, function () {
                window.location = window.location
            });
        });
    }
</script>
