</html>

<script>function buttonClicked() {
        let obj = {
            Username: $('#username').val(),
            Password: $('#password').val()
        };

        console.log(obj);

        httpRequest("POST", "/api/account/authenticate", obj, function (response) {
                setCookie("auth", "Bearer " + response);
                window.location = "/home";
            });
    }</script>

